<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos con EJS</title>
</head>
    <body>
        <%- include('../partials/header') %>
        <h1>Productos</h1>

        <% if(products.length > 0) { %>
        
            <table>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>

                <% products.forEach((product) => { %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.title %></td>
                        <td><%= product.price %></td>
                        <td><img src="<%= product.thumbnail %>" alt="producto" style="max-width: 200px;"></td>
                    </tr>
                <% }) %>  
            </table>

        <% } else { %>
                
                <p>No hay productos</p>
            
            <% } %> 

        <%- include('../partials/footer') %> 
    </body>
</html>