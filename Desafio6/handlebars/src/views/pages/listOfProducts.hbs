<h2>Productos</h2>
{{#if products.[0]}}
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
            </tr>
        </thead>
        <tbody>
        {{#each products}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td><img src="{{this.thumbnail}}" alt="{{this.title}}" style="max-width: 100px; height: 100px"/></td> 
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
<h2>No hay productos en la lista</h2>
{{/if}}